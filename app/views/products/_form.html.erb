<%= simple_form_for @product do |f| %>
  <%= f.input :name, placeholder: 'Nome do produto!' %>
  <%= f.input :price, placeholder: 'Preço do produto!' %>
  <%= f.input :description, placeholder: 'Descrição do produto!' %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "btn-primary btn-card mb-2 btn-lg", value: "Enviar" %>
<% end %>
